<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <form class="form-inline" asp-page="/Account/Logout" method="post">
                <a class="nav-link text-dark">Hello @User.Identity.Name!</a>
                @if (User.IsInRole("admin"))
                {
                    <a class="nav-link text-dark" asp-page="/Admin/Index">Admin Panel</a>
                }
                <button type="submit" class="nav-link text-dark btn btn-link">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/Account/Login">Log In</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/Account/Register">Register</a>
        </li>
    }
</ul>

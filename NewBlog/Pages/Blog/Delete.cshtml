@page
@model NewBlog.Pages.Blog.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<hr />

<h3>Are you sure you want to delete this post?</h3>
<hr />
<div style="background-color: white; padding: 1em">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.PostTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.PostTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.DatePosted)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.DatePosted)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.DateEdited)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.DateEdited)
            @if (Model.Post.DateEdited == null)
            {
                <span>Never</span>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.PostContent)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.PostContent)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.ImageUrl)
            @if (Model.Post.ImageUrl == null)
            {
                <span>None</span>
            }
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.ImageUrl)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.User.Login)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Post.PostId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>

@page
@model NewBlog.Pages.Admin.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Post.PostId" />
            <div class="form-group">
                <label asp-for="Post.UserId" class="control-label"></label>
                <select asp-for="Post.UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="Post.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.PostTitle" class="control-label"></label>
                <input asp-for="Post.PostTitle" class="form-control" />
                <span asp-validation-for="Post.PostTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.DatePosted" class="control-label"></label>
                <input asp-for="Post.DatePosted" class="form-control" />
                <span asp-validation-for="Post.DatePosted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.DateEdited" class="control-label"></label>
                <input asp-for="Post.DateEdited" class="form-control" />
                <span asp-validation-for="Post.DateEdited" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.PostContent" class="control-label"></label>
                <input asp-for="Post.PostContent" class="form-control" />
                <span asp-validation-for="Post.PostContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.ImageUrl" class="control-label"></label>
                <input asp-for="Post.ImageUrl" class="form-control" />
                <span asp-validation-for="Post.ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
